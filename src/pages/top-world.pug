block append scripts
    script(src='/src/assets/lib/jquery.sticky-sidebar.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment.min.js', integrity='sha256-4iQZ6BVL4qNKlQ27TExEhBN1HFPvAvAMbFavKKosSWQ=', crossorigin='anonymous')
    script(src='/src/assets/lib/bootstrap-datetimepicker.min.js')

    script.
        $(function(){
            $('.collapsing-area>.not-collapse input').on('ifChecked', function(event){
                $(this).closest('.collapsing-area').find('.is-collapse').addClass('show')
            });
             $('.collapsing-area>.not-collapse input').on('ifUnchecked', function(event){
                $(this).closest('.collapsing-area').find('.is-collapse').removeClass('show')
            });
            $('#left-sidebar').stickySidebar({
                topSpacing: 112,
                bottomSpacing: 50
            });
            $('#right-sidebar').stickySidebar({
                topSpacing: 112,
            });
            $('.not-opened').click(function(){
                $(this).parent().addClass('opened')
            })
            $('button.cancel').click(function(){
                $('.new-post-card').removeClass('opened')
            })

            $('#post').click(function () {
                $('#detail').toggle()
            })
            $('#post1').click(function () {
                $('#detail1').toggle()
            })
            $('#post2').click(function () {
                $('#detail2').toggle()
            })

        })
