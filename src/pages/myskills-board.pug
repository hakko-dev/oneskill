    script.
        $(function(){
            $('.collapsing-area>.not-collapse input').on('change', function(){
                var target = $(this).closest('.collapsing-area').find('.is-collapse')
                if(this.checked){
                    target.addClass('show')
                }else{
                    target.removeClass('show')
                }
                
            });
            $('#left-sidebar').stickySidebar({
                topSpacing: 112,
                bottomSpacing: 50
            });
            $('#right-sidebar').stickySidebar({
                topSpacing: 112,
            });
            $('.not-opened').click(function(){
                $(this).parent().addClass('opened')
            })
            $('button.cancel').click(function(){
                $('.new-post-card').removeClass('opened')
            })
            
